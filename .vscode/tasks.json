{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "0.1.0",
    "command": "dotnet",
    "isShellCommand": true,
    "args": [],
    "tasks": [
        {
            "taskName": "build",
            "args": [
                "src/Holycode.AspNetCore.Middleware"
            ],
            "isBuildCommand": true,
            "showOutput": "silent",
            "problemMatcher": "$msCompile"
        },
        {
            "taskName": "buildTests",
            "args": [
                "test/Holycode.Configuration.Tests.dotnet",
                "--framework",
                "netcoreapp1.0"
            ],
            "isBuildCommand": false,
            "showOutput": "silent",
            "problemMatcher": "$msCompile"
        },      
        {
            "taskName": "test-dotnet",
            "suppressTaskName": true,
            "command": "dotnet",
            "args": [
                "test"
            ],
            "isTestCommand": true,
            "showOutput": "silent",
            "problemMatcher": "$msCompile",
            "options": {
                "cwd": "${workspaceRoot}/test/Holycode.Configuration.Tests.dotnet"
            }
        },
        {
            "taskName": "test-netfx",
            "suppressTaskName": true,
            "args": [
                "test",
                "test/Holycode.Configuration.log4net.Tests",
                "--framework",
                "net451"
            ],
            "isTestCommand": true,
            "showOutput": "silent",
            "problemMatcher": "$msCompile"
        }
    ]
}